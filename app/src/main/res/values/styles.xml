<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.LetsCook" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">#2196F3</item>
        <item name="colorPrimaryDark">#1976D2</item>
        <item name="colorAccent">#FF4081</item>
        <item name="colorButtonNormal">#2196F3</item>


    </style>

    <style name="ProfileHeader">
        <item name="android:textColor">#1c274c</item>
        <item name="android:textSize">30sp</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="ProfileBox">
        <item name="android:background">#FFFFFF</item>
        <item name="android:padding">30dp</item>
        <item name="android:layout_margin">20dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:elevation">4dp</item>
    </style>

    <style name="ProfilePic">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">150dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@drawable/circular_background</item>
    </style>

    <style name="NameEmail">
        <item name="android:textColor">#1c274c</item>
        <item name="android:background">#eeeeee</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="EditProfileText">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#2196f3</item>
        <item name="android:background">#eeeeee</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:background">#2196F3</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="LogoutButton">
        <item name="android:background">#F44336</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="FooterText">
        <item name="android:textColor">#777777</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">30dp</item>
    </style>
</resources>